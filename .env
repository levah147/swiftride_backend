# ==========================================
# StreetRide Environment Variables
# ==========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ==========================================
# DJANGO CORE SETTINGS
# ==========================================
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.235.65,

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# Development (SQLite)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Production (PostgreSQL) - Uncomment and configure
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=streetride_db
# DB_USER=streetride_user
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_URL=redis://127.0.0.1:6379/1

# ==========================================
# CELERY CONFIGURATION
# ==========================================
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# ==========================================
# SMS PROVIDER CONFIGURATION
# ==========================================
# Options: 'console' (dev), 'africastalking', 'twilio', 'termii'
SMS_PROVIDER=console

# Africa's Talking (Recommended for Nigeria)
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_API_KEY=your-africastalking-api-key

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Termii (Popular in Nigeria)
TERMII_API_KEY=your-termii-api-key
TERMII_SENDER_ID=StreetRide

# ==========================================
# PAYMENT GATEWAYS
# ==========================================
# Paystack (Recommended for Nigeria)
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key

# Flutterwave
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your-flutterwave-key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your-flutterwave-key
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TEST-your-encryption-key

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@streetride.com

# ==========================================
# GOOGLE MAPS API
# ==========================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ==========================================
# AWS S3 (For Production Media Files)
# ==========================================
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=streetride-media
AWS_S3_REGION_NAME=us-east-1

# ==========================================
# FIREBASE (Push Notifications)
# ==========================================
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_PROJECT_ID=your-firebase-project-id

# ==========================================
# SENTRY (Error Tracking)
# ==========================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==========================================
# SECURITY SETTINGS
# ==========================================
# Set to True in production
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==========================================
# RATE LIMITING
# ==========================================
OTP_RATE_LIMIT=5/hour
API_RATE_LIMIT=1000/hour

# ==========================================
# APPLICATION SETTINGS
# ==========================================
OTP_EXPIRY_MINUTES=10
MAX_OTP_ATTEMPTS=5
RIDE_REQUEST_TIMEOUT_MINUTES=5
MIN_WITHDRAWAL_AMOUNT=100.00
MAX_DEPOSIT_AMOUNT=500000.00
PLATFORM_COMMISSION_RATE=20.00

# ==========================================
# FRONTEND URLS
# ==========================================
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:8000/admin






































